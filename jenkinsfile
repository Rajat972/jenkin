pipeline {
    agent any

    environment {
        name = 'gaurav'
    }

  parameters {
        string(name: 'person', defaultValue: "rajat", description: "who are u")
        booleanParam(name: 'ismale', defaultValue: true, description: "gender" )
        choice(name: 'city', choices: ['jaipur','jammu','delhi'], description: "name the city")
    }

    stages {
        stage('Hello') {
            environment {
                name = 'saurav'
            }
            steps {
                sh '''
                cd
                date
                echo "${name}"
                '''
            }
        }

        stage('Env') {
            steps {
                sh 'echo "${BUILD_ID}"'
                echo "Person: ${person}"
                
            }
        }
        stage('continue ?') {
            input{
                message "shoulde we go?"
                ok "yes we shouled"
            }
            steps{
                sh 'date'
            }
        }
    }
    post{
        always{
           echo "alwys running"
        }
        success{
           echo "alwys sucess"
        }
        failure{
           echo "alwys failure"
        }
    }
}
